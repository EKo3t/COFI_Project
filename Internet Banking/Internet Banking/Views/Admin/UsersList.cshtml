@model PagedList.IPagedList<Internet_Banking.Models.AdditionalUserDataModel>
@using PagedList.Mvc;
<link href="/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Список пользователей";
}

@if (Model.Any())
{
    <h2>Список пользователей</h2>
    <br />
    @Html.ActionLink("Добавить нового пользователя", "AddUser", "Admin")
    <br />

    <table class="borderedTable">
        <tbody>
            <tr>
                <td class="borderedTable">Логин</td>
                <td class="borderedTable">ФИО</td>
                <td class="borderedTable">Дата рождения</td>
                <td class="borderedTable">Гражданство</td>
                <td class="borderedTable">Идентификационный номер</td>
                <td class="borderedTable">Номер паспорта</td>
                <td class="borderedTable">Пароль</td>
                <td class="borderedTable">Действие</td>
            </tr>

            @foreach (var user in Model)
            {
                <tr>
                    <td class="borderedTable">@user.UserName</td>
                    <td class="borderedTable">@user.FIO</td>
                    <td class="borderedTable">@user.BirthDate</td>
                    <td class="borderedTable">@user.Nationality</td>
                    <td class="borderedTable">@user.IdentificationNumber</td>
                    <td class="borderedTable">@user.PassportNumber</td>
                    <td class="borderedTable">@user.Password</td>
                    <td class="borderedTable">@Html.ActionLink("Удалить", "DeleteUser", "Admin", new {id = user.UserId}, new {})</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <span>Какой-то непопулярный у вас Интернет-Банкинг. Пользователей нет. :(</span>
    <br />
    @Html.ActionLink("Добавить нового пользователя", "AddUser", "Admin")
    <br />
}
@*Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount*@
@Html.PagedListPager(Model, page => Url.Action("UsersList", new { page }))

@section Scripts { @Scripts.Render("~/bundles/jqueryval")}